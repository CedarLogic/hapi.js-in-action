{
    "server": {
        "app": {
            "appName": "pingoo flight tracking"
        },
        "debug": {
            "$filter": "env",
            "$base": {
                "request": ["error"]
            },
            "$default": {
                "log": ["info", "error", "connection", "client"]
            },
            "production": {
                "log": ["error"]
            }
        }
    },
    "connections": {
        "$filter": "env",
        "production": [
            { "port": 80 }
        ],
        "$default": [
            { "port": 4000 }
        ]
    },
    "plugins": [
        { "vision": null },
        { "./plugins/events": null },
        { "./plugins/logger": null },
        { 
            "./plugins/database": [{
                "options": {
                    "dbName": "pingoo",
                    "dbTable": "pings"
                }
            }] 
        },
        { "./plugins/portal": null },
        { "./plugins/receive": null }
    ]
}